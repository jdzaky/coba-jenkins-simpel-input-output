pipeline {
    agent any

    environment {
        GIT_CREDENTIALS = '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' 
        NGROK_AUTHTOKEN = '2hYTlqXdpzLr2Z0V66QfOEFxnAs_2GS6rEfvid4r6ndwpZKXX'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/master']],
                          doGenerateSubmoduleConfigurations: false,
                          extensions: [],
                          submoduleCfg: [],
                          userRemoteConfigs: [[credentialsId: env.GIT_CREDENTIALS,
                                                url: 'https://github.com/jdzaky/coba-jenkins-simpel-input-output.git']]])
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Run Application') {
            steps {
                sh 'python main.py &'
            }
        }
        stage('Expose with ngrok') {
            steps {
                    sh '"D:/DOWNLOAD/Aplikasi exe/ngrok.exe" authtoken ${NGROK_AUTHTOKEN}'
                    sh '"D:/DOWNLOAD/Aplikasi exe/ngrok.exe" http 8080 &'
            }
        }
    }
}