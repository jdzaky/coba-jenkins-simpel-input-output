pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/jdzaky/coba-jenkins-simpel-input-output.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Run Application') {
            steps {
                sh 'python main.py &'
            }
        }
        stage('Expose with ngrok') {
            steps {
                sh './ngrok http 6969'
            }
        }
    }
}
